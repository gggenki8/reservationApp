<body class = "new-account-view">
<div class = "new-account-header">
  <h2 class = "new-title" >新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "ユーザー名*" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "ユーザー名を入力", class: "form-cottrol" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス*"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレスを入力", class: "form-cottrol" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード*"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上のパスワード)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "パスワードを入力", class: "form-cottrol" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "確認用パスワード*" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "確認用パスワードを入力", class: "form-cottrol" %>
  </div>

  <div class="actions">
    <%= f.submit "新しいアカウントを作成" %>
  </div>

  <div class = "hold-account">
  <%= link_to "アカウントをお持ちの方はログイン", "#"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</body>
