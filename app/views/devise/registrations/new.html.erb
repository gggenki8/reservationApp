<body class = "sign_up">
<div class = "new-account-header">
  <h2 class = "new-title" >新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "ユーザー名*" %>
    <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名を入力", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス*"%>
    <%= f.email_field :email, autofocus: true, placeholder: "メールアドレスを入力", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード*"%>
    <%= f.password_field :password, placeholder: "パスワードを入力", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "確認用パスワード*" %>
    <%= f.password_field :password_confirmation, placeholder: "確認用パスワードを入力", class: "form-control" %>
  </div>

  <div class="btn">
    <%= f.submit "新しいアカウントを作成" %>
  </div>
<div class = "login_link">
  <p><%= link_to "アカウントをお持ちの方はこちら", new_user_session_path(@user) %>
</div>

<% end %>

</div>
</body>
