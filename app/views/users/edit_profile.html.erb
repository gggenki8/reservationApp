<body>    
    <header class = "setting-title">
        <h3>設定</h3>
    </header>

    <nav class = "setting-content">
        <ul>
            <th><%= link_to "アカウント", user_path(@user)%></th>
            <th><%= link_to "プロフィール", profile_user_path(@user) %></th>
        </ul>
    </nav>

    <%= form_with model: @user, url: update_profile_user_path(@user), method: :patch, local: true do |f| %>
        <div>
          <%= f.label :avatar, "アイコン画像" %><br>
          <%= f.file_field :avatar %>
        </div>
        
        <div>
          <%= f.label :name, "ユーザー名" %><br>
          <%= f.text_field :name %>
        </div>
      
        <div>
          <%= f.label :introduction, "自己紹介" %><br>
          <%= f.text_area :introduction %>
        </div>
      
        <div>
          <%= f.submit "保存する" %>
        </div>

        <div>
            <%= link_to "キャンセル", profile_user_path(@user) %>
        </div>
    <% end %>